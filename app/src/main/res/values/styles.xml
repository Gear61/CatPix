<resources>
    <style name="cat_pictures_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="cat_picture_grid_cell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="skeleton_cat_picture_grid_cell" parent="cat_picture_grid_cell">
        <item name="android:background">@color/gray_300</item>
    </style>

    <style name="full_view_toolbar_button">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/shadow_black</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="bottom_navigation_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="no_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">72dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">23sp</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>
